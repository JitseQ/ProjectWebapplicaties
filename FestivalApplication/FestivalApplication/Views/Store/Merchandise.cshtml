@{
    ViewData["Title"] = "Merchandise";
}
@model FestivalApplication.ViewModels.MerchandiseListViewModel

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
     @foreach (var item in Model.Producten)
	{
		<div class="card" style="width:500px; margin-top:100px; float:left; margin: 20px; margin-bottom: 20px">
			
			<div class="card-img-overlay">
				<h4 class="card-title-center"><a asp-action="Details" asp-route-id="@item.ProductId"> @item.Naam </a></h4>
			</div>
		</div>
	}
</div>
