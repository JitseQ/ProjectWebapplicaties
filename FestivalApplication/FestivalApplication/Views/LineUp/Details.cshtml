@{
}
@model FestivalApplication.ViewModels.LineUpDetailsViewModel


<div class="text-center" >

    @foreach (var item in Model.Artiesten)
    {
        <img class="card-img-top" src="~/Festivalimage.jpg" alt="Card image" style="height:400px; width:auto">
        <h1> @item.Naam </h1>
    }


<p>
    Datum: @Model.Datum | 
    Beginuur: @Model.Beginuur | 
    Einduur: @Model.Einduur 
</p>

 @foreach (var item in Model.Stages)
    {
        <p>  Stage: @item.Naam </p>
    }

    @foreach (var item in Model.Artiesten)
    {
        if (@item.Facebook != null)
        {
            <p> <a href="@item.Facebook">Facebook</a> </p>
        }
        if (@item.Instagram != null)
        {
            <p> <a href="@item.Instagram">Instagram</a> </p>
        }
        if (@item.Spotify != null)
        {
            <p> <a href="@item.Spotify">Spotify</a> </p>
        }
        
    }


</div>
<p>@Html.ActionLink("Terug","Index","LineUp")</p>