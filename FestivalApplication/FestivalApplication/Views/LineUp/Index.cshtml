@{
    ViewData["Title"] = "Line-up";
}
@model FestivalApplication.ViewModels.LineUpListViewModel

<div class="text-center" style="text-align: center;">
    <h1 class="display-4">Line-Up</h1>

    @foreach (var item in Model.Artiesten)
	{
		<div class="card" style="width:500px; margin-top:100px;">
			<img class="card-img-top" src="~/Festivalimage.jpg" alt="Card image">
			<div class="card-img-overlay">
				<h4 class="card-title-center"><a asp-action="Details" asp-route-id="@item.ArtiestId"> @item.Naam </a></h4>
			</div>
		</div>
	}
</div>



